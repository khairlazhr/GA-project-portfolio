<%- include("../partials/header.ejs") %>
    <div class="container">
        <div class="row mt-3 justify-content-center">
            <div class="signup-form col-4">
                <form action="/users/signup" method="POST">
                    <div class="card">
                        <div class="card-header d-flex flex-column align-items-center">
                            <h4>Register Now!</h4>
                            <p>Please fill in this form to create an account!</p>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-2">
                                <label for="username" class="form-label">Username:</label>
                                <input type="text" class="form-control" name="username" required> 	
                            </div>
                            <div class="form-group mb-2">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" class="form-control" name="email"  required>
                            </div>
                            <div class="form-group mb-2">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" class="form-control col-sm-4" name="password"  required>
                            </div>
                            <div class="form-group mb-4">
                                <label for="confirmpw" class="form-label">Confirm Password:</label>
                                <input type="password" class="form-control" name="confirmpw" required>
                            </div>        
                            <div class="form-group text-end">
                                <button type="submit" class="btn btn-primary btn-md">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="hint-text">Already have an account? <a href="/users/login">Login here</a></div>
            </div>
        </div>
    </div>
<%- include("../partials/footer.ejs") %>