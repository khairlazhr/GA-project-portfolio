<%- include("../partials/header.ejs") %>
<div class="container">
    <div class="row mt-3 justify-content-center">
        <div class="login-form col-4">
            <form action="/users/login?_method=PUT" method="POST">
                <div class="card">
                    <div class="card-header d-flex flex-column align-items-center">
                        <h4>Forgotten your password?</h4>
                        <p>Please fill in all the fields down below to change</br> your password!</p>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-2">
                            <label for="username" class="form-label">Please enter your registered username.</label>
                            <input type="text" class="form-control" name="username" required> 	
                        </div>
                        <div class="form-group mb-2">
                            <label for="username" class="form-label"> Old Password:</label>
                            <input type="password" class="form-control" name="oldpw" required>
                        </div> 
                        <div class="form-group mb-2">
                            <label for="username" class="form-label"> New Password:</label>
                            <input type="password" class="form-control" name="password" required>
                        </div> 
                        <div class="form-group mb-2">
                            <label for="username" class="form-label">Confirm New Password:</label>
                            <input type="password" class="form-control" name="confirmpw" required>
                        </div> 
                        <div class="form-group d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Confirm</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include("../partials/footer.ejs") %>